<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


    <TextView
            android:text="@string/medium_size_header"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:id="@+id/fragmentHead"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textSize="16sp"
            android:background="#1C7FC3"
            android:textColor="#fff"/>
    <TextView
            android:text="@string/we_now_offer_discounts_on_orders_sheduled_for_24hr_31day_pickup_into_the_future"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:id="@+id/fragmentBody"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textSize="19sp"
            android:layout_below="@id/fragmentHead"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:id="@+id/fragmentBtn"
            android:textColor="#1C7FC3"
            android:textSize="16sp"
            android:layout_marginStart="110dp" android:layout_alignStart="@+id/fragmentHead"
            android:layout_marginEnd="110dp" android:layout_alignEnd="@+id/fragmentHead"
            android:layout_alignTop="@+id/fragmentHead" android:layout_marginTop="180dp"
            app:backgroundTint="#ffffff"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" android:textStyle="bold"/>

</RelativeLayout>